{
    "compilerOptions": {
        "baseUrl": "./src",
        "target": "es5",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "esnext"],

         "allowJs": true,
         "skipLibCheck": true,
         "esModuleInterop":true,
         "strict": true,
         "forceConsistentCasingInFileNames": true,
         "noFallthroughCasesInSwitch": true,
         "module": "esnext",
         "moduleResolution": "node",
         "resolveJsonModule": true,
         "isolatedModules": true,
         "noEmit": true,
         "jsx": "react-jsx"
    },
    "include": [
        "src"
    ]   
}
